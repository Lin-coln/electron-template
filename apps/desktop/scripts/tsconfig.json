{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@scripts/*": ["scripts/*"],
      "@appConfig": ["app.config.ts"]
    }
  },
  "include": ["../app.config.ts", "./**/*"]
}
